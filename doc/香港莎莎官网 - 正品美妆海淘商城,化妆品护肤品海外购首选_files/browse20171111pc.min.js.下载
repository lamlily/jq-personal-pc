
jQuery(document).ready(function($){var sasaUrlBr=['/account/login','/account/register','/account/coupon','/flash-sales','/act-eleven2018_ajax_activity_page_red_button.html','/act-eleven2018_ajax_activity_page_red.html'];var demoBr={};demoBr.trys=function(index,Obj){if(index=='tip'){layer.open({type:1,title:false,shade:.5,skin:'browser-tip browser-0',anim:2,area:['516px',''],shadeClose:true,closeBtn:'关闭',content:'<div class="acp-con" id="J-acp-con"><div class="acp-main">'+Obj+'</div></div>'});}else if(index=='browse'){layer.open({type:1,title:false,shade:.5,skin:'browser-popuo  browser-0',anim:2,area:['500px','503px'],shadeClose:true,closeBtn:'关闭',content:'<div class="browser-con" id="J-browser-con">'+Obj+'</div>'});}};var toNetx='<p class="acp-next"><a href="'+sasaUrlBr[0]+'" class="acp-btn">登录</a><a href="'+sasaUrlBr[1]+'" class="acp-btn">注册</a></p>'
