
jQuery(document).ready(function($){initFirst();function initFirst(){$.ajax({type:'post',cache:false,dataType:'json',data:{'source_type':'index'},url:'/act-eleven2018_main_show.html',error:function(request){},success:function(result){var _res=result,_data=_res.data;var curTime=_data.cur_time,start_time=_data.index_from_time;var nextTime=0;if(curTime<start_time){$('body').append('<div class="hide" id="J-countDown-refresh"></div>');nextTime=start_time;var timeNum=nextTime-curTime;var oCountDown=$('#J-countDown-refresh');countDownRe(timeNum,oCountDown,initFirst);}}});}
function countDownRe(timeNum,obj,callback){var timer=null;clearInterval(timer);if(timeNum>=0){timer=setInterval(function(){timeNum-=1;if(timeNum>=0){var day=parseInt(timeNum/60/60/24);var hour=checkTime(parseInt(timeNum/60/60%24));var minute=checkTime(parseInt(timeNum/60%60));var seconds=checkTime(parseInt(timeNum%60));var text='';if(day>0){text+=day+"天";}
text+=hour+"时";text+=minute+"分";text+=seconds+"秒";obj.html(text);}
if(timeNum==0){callback();}else if(timeNum<0){location.reload();}},1000);}};function checkTime(n){if(n<10){return'0'+n;}
else{return''+n;}};});